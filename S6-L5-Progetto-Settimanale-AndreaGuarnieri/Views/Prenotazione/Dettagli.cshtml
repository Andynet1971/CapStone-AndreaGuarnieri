@model CapStone_AndreaGuarnieri.Models.ViewModels.DettaglioPrenotazioneViewModel

@{
    ViewData["Title"] = "Dettagli Prenotazione";
}

<form asp-action="SalvaDettagliPrenotazione" method="post">
    <input type="hidden" asp-for="ID" />
    <div class="row">
        <!-- Colonna Sinistra: Dati Cliente -->
        <div class="col-md-6">
            <h4>Cliente</h4>
            <hr />
            <div class="form-group">
                <label asp-for="ClienteID">Codice Fiscale</label>
                <input asp-for="ClienteID" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Nome">Nome</label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cognome">Cognome</label>
                <input asp-for="Cognome" class="form-control" />
                <span asp-validation-for="Cognome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Citta">Città</label>
                <input asp-for="Citta" class="form-control" />
                <span asp-validation-for="Citta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Provincia">Provincia</label>
                <input asp-for="Provincia" class="form-control" />
                <span asp-validation-for="Provincia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefono">Telefono</label>
                <input asp-for="Telefono" class="form-control" />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cellulare">Cellulare</label>
                <input asp-for="Cellulare" class="form-control" />
                <span asp-validation-for="Cellulare" class="text-danger"></span>
            </div>
        </div>

        <!-- Colonna Destra: Dati Prenotazione -->
        <div class="col-md-6">
            <h4>Prenotazione</h4>
            <hr />
  <!--         <div class="form-group">
                <label asp-for="CameraID">Camera</label>
                <select asp-for="CameraID" class="form-control" asp-items="@(new SelectList(Model.CamereDisponibili, "Numero", "Descrizione"))">
                    <option value="">Seleziona una camera</option>
                </select>
                <span asp-validation-for="CameraID" class="text-danger"></span>
                      </div>-->
            <div class="form-group">
                <label asp-for="TipoSoggiorno">Tipo Soggiorno</label>
                <select asp-for="TipoSoggiorno" class="form-control">
                    <option value="pernottamento con prima colazione">Pernottamento con Prima Colazione</option>
                    <option value="pensione completa">Pensione Completa</option>
                    <option value="mezza pensione">Mezza Pensione</option>
                </select>
                <span asp-validation-for="TipoSoggiorno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataInizio">Data Inizio</label>
                <input asp-for="DataInizio" class="form-control" type="date" />
                <span asp-validation-for="DataInizio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataFine">Data Fine</label>
                <input asp-for="DataFine" class="form-control" type="date" />
                <span asp-validation-for="DataFine" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Caparra">Caparra</label>
                <input asp-for="Caparra" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Caparra" class="text-danger"></span>
            </div>
        </div>
    </div>

    <!-- Sezione per i Servizi Aggiuntivi -->
    <div>
        <h4>Servizi Aggiuntivi</h4>
        <hr />
        <table class="table">
            <thead>
                <tr>
                    <th>Nome Servizio</th>
                    <th>Tariffa</th>
                    <th>Quantità</th>
                    <th>Data</th>
                    <th>Azioni</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var servizio in Model.ServiziAggiuntivi)
                {
                    <tr>
                        <td>@servizio.NomeServizio</td>
                        <td>@servizio.TariffaServizio.ToString("C")</td>
                        <td>@servizio.Quantita</td>
                        <td>@servizio.Data.ToString("dd/MM/yyyy")</td>
                        <td>
                            <a asp-action="EliminaServizioAggiuntivo" asp-route-id="@servizio.ID" class="btn btn-danger">Elimina</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Pulsanti di azione -->
    <div class="form-group text-center">
        <div class="d-inline-block">
            <button type="submit" class="btn btn-primary btn-md mx-3">Salva Modifiche</button>
            <a asp-action="Index" class="btn btn-secondary btn-md mx-3">Torna Alla Lista</a>
        </div>
    </div>

</form>
